<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cajama.malarialite"
    android:versionCode="10"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.DELETE_PACKAGES" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light" >
        <activity
            android:name="com.cajama.malarialite.MainActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cajama.malarialite.newreport.NewReportActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_new_report"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name="com.cajama.malarialite.newreport.FullscreenPhotoActivity"
            android:label="@string/title_activity_fullscreen_photo" >
        </activity>
        <activity
            android:name="com.cajama.malarialite.entryLogs.QueueLogActivity"
            android:label="@string/title_activity_queue_log"
            android:parentActivityName="com.cajama.malarialite.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cajama.malarialite.MainActivity" />
        </activity>
        <activity
            android:name="com.cajama.malarialite.entryLogs.SentLogActivity"
            android:label="@string/title_activity_sent_log" >
        </activity>
        <activity
            android:name="com.cajama.background.DialogActivity"
            android:label="InputDialog"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="com.cajama.malarialite.SettingsActivity"
            android:label="Settings" />
        <activity
            android:name="com.cajama.malarialite.entryLogs.ReportViewerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="ReportViewer"
            android:uiOptions="splitActionBarWhenNarrow" />

        <service android:name="com.cajama.background.FinalSendingService" />
        <service android:name="com.cajama.background.SyncService" />
        <service android:name="com.cajama.background.ValidationService" />

        <receiver
            android:name="com.cajama.background.ConnectionBroadcastReceiver"
            android:label="ConnectionBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>