<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:weightSum="10">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/relativeLayout"
            />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
        android:gravity="center_horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="2">

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                android:id="@+id/button"
                    android:layout_gravity="center"
                    android:onClick="submitNewReport"
                    android:textStyle="bold"

                android:drawableTop="@drawable/camera"
                android:text="@string/submit_new_report"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="2">

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                android:id="@+id/button2"
                    android:layout_gravity="center"
                    android:onClick="viewQueueLog"
                    android:textStyle="bold"
                android:drawableTop="@drawable/queue2"
                android:text="@string/queued_entries" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="2">

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                android:id="@+id/button3"
                    android:layout_gravity="center"
                    android:onClick="viewSentLog"
                    android:textStyle="bold"
                android:drawableTop="@drawable/sent"
                android:text="@string/sent_entries" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
</LinearLayout>