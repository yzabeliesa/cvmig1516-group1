    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:id="@+id/first_flip">

        <GridView
            android:id="@+id/new_report_photos_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"
            android:stretchMode="columnWidth"
            android:numColumns="3"
            />

        <TextView
            android:id="@+id/empty_list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_photos_message"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:id="@+id/second_flip"
        android:fillViewport="true">

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/first_flip4"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:weightSum="8">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView"
                android:layout_weight="1"
                android:textSize="50dp"
                android:gravity="center"
                android:text="@string/info_label" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="3">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Priority:"
                    android:id="@+id/textView2"
                    android:layout_weight="2"
                    android:textSize="30dp"
                    android:layout_gravity="center_vertical" />

                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:id="@+id/priorityRadioGroup"
                    android:layout_gravity="center_vertical"
                    android:checkedButton="@+id/radio_normal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal"
                        android:id="@+id/radio_normal"
                        android:layout_weight="1"
                        android:textSize="30dp"
                        android:layout_gravity="center_vertical" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High"
                        android:id="@+id/radio_high"
                        android:layout_weight="1"
                        android:textSize="30dp"
                        android:layout_gravity="center_vertical" />
                </RadioGroup>
            </LinearLayout>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/parasite"
                android:layout_weight="2"
                android:textSize="30dp"
                android:hint="@string/diagnosis" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text|textImeMultiLine|textMultiLine|textLongMessage"
                android:ems="10"
                android:id="@+id/description"
                android:layout_weight="4"
                android:textSize="30dp"
                android:hint="@string/description"
                android:scrollbars="vertical"
                android:lines="3"
                android:maxLines="4"
                android:minLines="2"/>
        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:id="@+id/region_flip"
        android:fillViewport="true">

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/first_flip5"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:weightSum="6">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/region"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:spinnerMode="dialog" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/province"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:spinnerMode="dialog" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/municipality"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:spinnerMode="dialog" />
        </LinearLayout>

    </ScrollView>

